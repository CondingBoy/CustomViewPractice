<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animator_practice_in_xml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.wang.customviewpractice.animatePractice.AnimatorPracticeInXml">
    <Button
        android:id="@+id/bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="start animator"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_centerInParent="true"
        android:background="#f00">
    <TextView
        android:id="@+id/tv_animator"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:background="#f1e985"
        android:text="animator"/>
    </LinearLayout>

</RelativeLayout>
