<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wang.customviewpractice.MainActivity">
    <Button
        android:id="@+id/bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置进度"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>

    <com.wang.customviewpractice.drawingofview.WaveView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        wave:waveColor="#24d3f2"
        wave:waveLength="400dp"
        wave:waveHeight="30dp"
        wave:maxProgress="100"
        wave:currentProgress="80"
        android:paddingRight="20dp"
        android:paddingLeft="50dp"
        android:paddingBottom="30dp"
         />

</LinearLayout>
