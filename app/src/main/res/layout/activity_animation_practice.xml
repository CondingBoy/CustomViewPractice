<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animation_practice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wang.customviewpractice.animatePractice.AnimationPractice">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_scale_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="scale"/>
        <Button
            android:id="@+id/bt_rotate_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="rotate"/>
        <Button
            android:id="@+id/bt_translate_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="translate"/>
        <Button
            android:id="@+id/bt_alpha_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="alpha"/>

    </LinearLayout>
    <Button
        android:id="@+id/bt_set_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000"
        android:text="set"/>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="256dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
    <TextView
        android:id="@+id/tv_anim"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:text="这是帧动画"
        android:textSize="20sp"
        android:background="#da31f4"
        android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
